<shape android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 填充的颜色 -->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="8dp" />
    <solid android:color="#ea3c3c"/>
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="1dp"
        android:bottom="1dp"/>
</shape>